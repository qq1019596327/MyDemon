.content{
  display: flex;
  flex-direction: column;
}

.top_photo{
  width: 100%;
}

.top_photo .photo{
  width: 100%;
  height: 460rpx;
}
.top_photo .icon{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 50%;
  margin-left: -50rpx;
  top: 180rpx;
  opacity: 0.6;
}

.release_info{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.release_info image{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.release_info .user_name{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.release_info .text,
.release_info .releas_date{
  margin-left: 20rpx;
  color: #999;
}

.title{
  font-weight: 700;
  letter-spacing: 2;
  font-size: 36rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  color: #4b556c;
}

.share{
  margin-top: 20rpx;
}
.share .photo{
  float: right;
  vertical-align: middle;
  margin-right: 40rpx;
}
.share .photo image{
  width: 80rpx;
  height: 80rpx;
  margin-left: 40rpx;
}
.share .halving_line{
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.context{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  
}

